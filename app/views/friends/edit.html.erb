<h1>Editing friend</h1>

<%= render "form", friend: @friend %>

<br>

<div class="d-flex">
  <%= link_to "Show", @friend, class: "btn btn-sm btn-outline-secondary" %>

  <%= button_to "Delete", @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-danger mx-2" %>

  <%= link_to "Back", friends_path, class: "btn btn-sm btn-outline-secondary" %>
</div>
